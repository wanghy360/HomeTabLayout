<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bottom_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.wrongyuan.hometab_sample.BottomTabActivity">

    <com.github.wrongyuan.hometab.HomeTabLayout
        android:id="@+id/id_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"/>

    <FrameLayout
        android:id="@+id/id_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_tab"></FrameLayout>

</RelativeLayout>
